<section id="menu" class="py-24 bg-dark-light">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h3 class="font-sans text-brand tracking-widest uppercase text-sm mb-4">Our Offerings</h3>
      <h2 class="font-serif text-4xl md:text-5xl text-white">Menu Highlights</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {categories.map((item, index) => (
        <a href={item.link} target="_blank" class="group relative block w-full aspect-[3/4] overflow-hidden rounded-sm revealing-image" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Image Helper Wrapper for Zoom -->
          <div class="absolute inset-0 transition-transform duration-700 group-hover:scale-110">
            <img 
              src={item.image} 
              alt={item.title} 
              class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="absolute bottom-0 left-0 w-full p-6 translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
            <h3 class="font-serif text-2xl text-white mb-2">{item.title}</h3>
            <p class="font-sans text-sm text-white/70 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
              {item.description}
            </p>
            <div class="mt-4 inline-flex items-center gap-2 text-brand text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-all duration-500 delay-200 translate-y-4 group-hover:translate-y-0">
              Order Now <span class="text-lg">â†’</span>
