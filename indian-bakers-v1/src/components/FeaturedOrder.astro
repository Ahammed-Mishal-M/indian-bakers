---
import menuData from '../data/menu.json';

const { visual_highlights } = menuData;
const highlights = Object.values(visual_highlights);
---

<section id="featured" class="py-20 bg-dark-900 border-b border-white/5 relative overflow-hidden">
  {/* Background Glow */}
  <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-black to-dark-900 z-0"></div>
  
  <div class="container mx-auto px-5 lg:px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-4">
        Our <span class="text-orange-400">Specials</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Handpicked favorites available for instant order.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      {highlights.map((item) => (
        <div class="group relative bg-white/5 backdrop-blur-sm rounded-3xl overflow-hidden border border-white/10 hover:border-brand/30 transition-all duration-500 hover:shadow-2xl hover:shadow-brand/5 w-full flex flex-col md:flex-row md:min-h-[24rem]">
          
          {/* Image Side */}
          <div class="w-full md:w-1/2 h-64 md:h-auto relative overflow-hidden">
            <img 
              src={item.image} 
              alt={item.title} 
              class="absolute inset-0 w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              onerror="this.src='https://placehold.co/600x600/1a1a1a/e9a127?text=Indian+Bakers'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900/90 via-dark-900/20 to-transparent md:bg-gradient-to-r md:from-transparent md:via-dark-900/20 md:to-dark-900/90"></div>
          </div>

          {/* Content Side */}
          <div class="w-full md:w-1/2 p-6 md:p-10 flex flex-col justify-center relative bg-dark-900/40">
            <h3 class="text-3xl font-serif font-bold text-white mb-2 leading-tight">{item.title}</h3>
            <p class="text-brand text-xs font-bold tracking-[0.2em] uppercase mb-6 opacity-90">{item.subtitle}</p>
            
            <ul class="space-y-3 mb-8 text-gray-300 text-sm font-sans">
              {item.items.map((subItem) => (
                <li class="flex items-start gap-3 group/item">
                  <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-brand group-hover/item:scale-125 transition-transform duration-300"></span>
                  <span class="group-hover/item:text-white transition-colors duration-300">{subItem}</span>
                </li>
              ))}
            </ul>

            <a 
              href={`https://wa.me/919048151525?text=Hi, I would like to order ${item.title}`}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-auto relative overflow-hidden group/btn inline-flex items-center justify-center gap-3 bg-gradient-to-r from-brand to-yellow-500 text-dark-900 font-bold font-sans h-14 w-full rounded-xl transition-all duration-300 shadow-lg shadow-brand/20 hover:shadow-brand/40 hover:scale-[1.02]"
            >
              <div class="absolute inset-0 bg-white/20 translate-y-full group-hover/btn:translate-y-0 transition-transform duration-300"></div>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 relative z-10" fill="currentColor" viewBox="0 0 24 24">
                 <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
              <span class="relative z-10 tracking-wide uppercase text-sm">Order on WhatsApp</span>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
