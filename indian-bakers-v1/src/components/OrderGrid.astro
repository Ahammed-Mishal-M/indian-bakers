---
import menuData from '../data/menu.json';

const { whatsapp_quick_bites } = menuData;
---

<section id="fast-food" class="py-20 bg-dark-900 relative">
  <!-- Background Glow -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-gold-400/5 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-4">
        <span class="text-orange-400">Instant</span> Order
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Craving something sweet or savory? Order our best-sellers directly via WhatsApp!
      </p>
    </div>

    {whatsapp_quick_bites.map((category) => (
      <div class="mb-16 last:mb-0">
        <h3 class="text-2xl font-bold text-gold-300 mb-8 border-l-4 border-orange-500 pl-4">
          {category.category}
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          {category.items.map((item) => (
            <div class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-4 hover:border-orange-500/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(233,161,39,0.1)] hover:-translate-y-1">
              {/* Image Container with Fallback */}
              <div class="relative h-48 w-full rounded-xl overflow-hidden mb-4 bg-dark-800">
                <img 
                  src={`/images/${item.image}`} 
                  alt={item.name}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                  onerror="this.src='https://placehold.co/600x400/1a1a1a/e9a127?text=Indian+Bakers'"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-dark-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>

              <div class="space-y-3">
                <div class="flex justify-center items-center">
                  <h4 class="text-xl font-bold text-white leading-tight group-hover:text-orange-400 transition-colors text-center">
                    {item.name}
                  </h4>
                </div>

                <a 
                  href={`https://wa.me/919048151525?text=Hi Indian Bakers, I want to know the current price and availability for ${item.name}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full text-center py-3 rounded-xl bg-[#E9A127] hover:bg-[#d6901f] text-black font-bold transition-all shadow-lg shadow-orange-900/20 flex items-center justify-center gap-2 mt-4"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                  </svg>
                  Enquire / Order
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}

    <div class="mt-16 text-center">
      <div class="inline-block p-4 rounded-xl bg-white/5 border border-white/10 backdrop-blur-sm">
        <p class="text-gray-300">
          <span class="text-orange-400 font-bold">âœ¨ Need a custom Cake?</span> 
          Call us directly for weddings & events!
        </p>
      </div>
    </div>
  </div>
</section>
