---
import menuData from '../data/menu.json';
const { reviews } = menuData;
---

<section class="py-24 bg-dark relative overflow-hidden border-t border-white/5">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-brand/5 via-dark to-dark pointer-events-none"></div>

    <!-- Floating Particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-2 h-2 rounded-full bg-brand/20 blur-[1px] animate-[float-particle_4s_ease-in-out_infinite]"></div>
        <div class="absolute top-3/4 right-1/3 w-3 h-3 rounded-full bg-brand/10 blur-[2px] animate-[float-particle_6s_ease-in-out_infinite_1s]"></div>
        <div class="absolute top-1/3 right-1/4 w-1.5 h-1.5 rounded-full bg-white/10 blur-[1px] animate-[float-particle_5s_ease-in-out_infinite_0.5s]"></div>
    </div>

    <div class="container mx-auto relative z-10 mb-16 px-6 text-center revealing-image" data-aos="fade-down">
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-4 tracking-tight">
            Our Reviews Speak for Us
        </h2>
        <span class="font-serif text-brand text-3xl italic block opacity-90">Reviews</span>
    </div>

    <!-- Marquee Container -->
    <div class="flex overflow-hidden group" data-aos="fade-in" data-aos-delay="200">
        <!-- Marquee Content (First Set) -->
        <div class="flex animate-marquee gap-8 min-w-full flex-shrink-0 items-center justify-around pr-8 group-hover:pause">
            {reviews.map((review) => (
                <div class="group/card relative w-[350px] md:w-[450px] p-8 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 flex-shrink-0 hover:border-brand/30 transition-all duration-300 hover:scale-105 hover:-rotate-1 hover:bg-white/10 hover:shadow-2xl hover:shadow-brand/10 cursor-pointer">
                    <!-- Google Icon -->
                    <div class="absolute top-8 left-8 transition-transform duration-500 group-hover/card:rotate-12 group-hover/card:scale-110">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-white/80 drop-shadow-lg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"></path>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"></path>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"></path>
                        </svg>
                    </div>

                    <!-- Stars -->
                    <div class="flex justify-end mb-6">
                        {Array.from({ length: 5 }).map((_, i) => (
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#E9A127] transition-all duration-300 group-hover/card:scale-110" style={`transition-delay: ${i * 50}ms`} viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>

                    <!-- Review Text -->
                    <p class="text-white/90 font-sans text-lg italic leading-relaxed mb-6 line-clamp-4 group-hover/card:text-white transition-colors duration-300">
                        "{review.text}"
                    </p>

                    <!-- Author -->
                    <div class="text-right">
                        <p class="text-white/50 text-sm font-bold uppercase tracking-wider group-hover/card:text-brand transition-colors duration-300">{review.name}</p>
                    </div>
                </div>
            ))}
        </div>

        <!-- Marquee Content (Second Set for seamless loop) -->
        <div aria-hidden="true" class="flex animate-marquee gap-8 min-w-full flex-shrink-0 items-center justify-around pr-8 group-hover:pause">
            {reviews.map((review) => (
                <div class="group/card relative w-[350px] md:w-[450px] p-8 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 flex-shrink-0 hover:border-brand/30 transition-all duration-300 hover:scale-105 hover:-rotate-1 hover:bg-white/10 hover:shadow-2xl hover:shadow-brand/10 cursor-pointer">
                    <!-- Google Icon -->
                    <div class="absolute top-8 left-8 transition-transform duration-500 group-hover/card:rotate-12 group-hover/card:scale-110">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-white/80 drop-shadow-lg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"></path>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"></path>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"></path>
                        </svg>
                    </div>

                    <!-- Stars -->
                    <div class="flex justify-end mb-6">
                        {Array.from({ length: 5 }).map((_, i) => (
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#E9A127] transition-all duration-300 group-hover/card:scale-110" style={`transition-delay: ${i * 50}ms`} viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>

                    <!-- Review Text -->
                    <p class="text-white/90 font-sans text-lg italic leading-relaxed mb-6 line-clamp-4 group-hover/card:text-white transition-colors duration-300">
                        "{review.text}"
                    </p>

                    <!-- Author -->
                    <div class="text-right">
                        <p class="text-white/50 text-sm font-bold uppercase tracking-wider group-hover/card:text-brand transition-colors duration-300">{review.name}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes float-particle {
        0%, 100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(10px, -20px);
        }
    }
</style>
