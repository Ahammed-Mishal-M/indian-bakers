---
import menuData from '../data/menu.json';

const { cafe_menu_carousel } = menuData;
---

<section id="cafe-menu" class="py-20 bg-dark-900 overflow-hidden relative border-t border-white/5">
    
  <div class="container mx-auto px-6 mb-12">
    <div class="text-center">
      <h2 class="text-4xl font-serif font-bold text-white mb-4">
        Explore Our <span class="text-orange-400">Caf√© Menu</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Discover our range of savory delights and refreshing beverages.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-6">
    {cafe_menu_carousel.map((category) => (
      <div class="mb-16 last:mb-0">
        <h3 class="text-2xl font-bold text-gold-300 mb-6 pl-4 border-l-4 border-orange-500">
          {category.category}
        </h3>
        
        {/* Horizontal Scroll Container */}
        <div class="flex overflow-x-auto gap-6 pb-8 snap-x snap-mandatory scrollbar-hide">
          {category.items.map((item) => (
            <div class="snap-start flex-none w-72 group relative">
              <div class="h-full bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl overflow-hidden hover:border-orange-500/30 transition-all duration-300 flex flex-col hover:-translate-y-1 hover:bg-white/[0.07]">
                
                {/* Image Section */}
                <div class="h-48 w-full overflow-hidden relative">
                  <img 
                    src={`/images/${item.image}`} 
                    alt={item.name}
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                    onerror="this.src='https://placehold.co/600x400/1a1a1a/e9a127?text=Indian+Bakers'"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-dark-900/90 to-transparent opacity-60"></div>
                </div>

                {/* Content Section */}
                <div class="p-6 flex flex-col items-center justify-center text-center flex-grow">
                  <h4 class="text-xl font-serif text-white group-hover:text-orange-400 transition-colors mb-4 font-bold tracking-wide leading-tight">
                    {item.name}
                  </h4>
                  
                  <a 
                     href={`https://wa.me/919048151525?text=Hi Indian Bakers, I would like to enquire about ${item.name} from your cafe menu.`}
                     target="_blank"
                     rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 text-[#E9A127] hover:text-white font-semibold transition-colors mt-auto text-sm tracking-uppercase border-b border-transparent hover:border-[#E9A127] pb-0.5"
                  >
                    Enquire
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
  
  <style>
      /* Hide scrollbar for Chrome, Safari and Opera */
      .scrollbar-hide::-webkit-scrollbar {
          display: none;
      }
      /* Hide scrollbar for IE, Edge and Firefox */
      .scrollbar-hide {
          -ms-overflow-style: none;  /* IE and Edge */
          scrollbar-width: none;  /* Firefox */
      }
  </style>
</section>
